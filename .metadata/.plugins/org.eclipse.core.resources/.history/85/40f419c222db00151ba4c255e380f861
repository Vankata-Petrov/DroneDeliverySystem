		int currentBattery = drone.getBattery();
		
		int batteryCost = (int)distanceFromWarehouseToDeliveryLocation(deliveryLocation) * 2;
		
		//drone.setBatteryLevel(currentBattery - (int)distWarehouseDeliveryLocation * 2);
		
	}

